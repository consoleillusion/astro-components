---
import {loadPropDefaults} from "../../loadPropDefaults.js"
import Card from "../Card/index.astro"
const props = Astro.props // await loadPropDefaults(import.meta.dirname + '/config.yaml',Astro.props)
---

<section class="block card-grid">
  { (props.headline || props.subheadline)
  ? <header>
      {props.headline ? <h2>{props.headline}</h2> : ""}
      {props.subheadline ? <p>{props.subheadline}</p> : ""}
    </header>
  : ""
  }
  <div class="content">
  { (props.cards || []).map( card =>
    <Card headline={card.headline}
          subheadline={card.subheadline}
          text={card.text}
          imgSrc={card.imgSrc}
          icon={card.icon}
    />
  )}
  </div>
</section>

