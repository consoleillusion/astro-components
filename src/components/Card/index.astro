---
import {loadPropDefaults} from "../../loadPropDefaults.js"
import "./style.scss"
import Figure from "../Figure/index.astro"
const props = loadPropDefaults(import.meta.dirname + '/config.yaml',Astro.props)
const figureProps =
  { imgSrc: props.imgSrc
  , icon: props.icon
  , chart: props.chart
  , code: props.code
  }
---

<div class="card">
  <h3>{props.headline}</h3>
  <p>{props.text}</p>
  <Figure {...figureProps} />
</div>
