---
/*
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
*/
import SpeedInsights  from "@vercel/speed-insights/astro"
import { Font } from 'astro:assets'
import SEO from "../components/SEO"
import "@styles/global.scss"
import { kebabCase } from 'change-case'
const meta =
  { language: "en"
  , fonts:
    { heading: "Raleway"
    , body: "Open Sans"
    }
  , ...Astro.props
  }

const toVars =
  fonts => Object.entries(fonts).map( f => "--font-"+kebabCase(f[0]) + ": var(--font-" + kebabCase(f[1]) + ");").join('')
---

<!doctype html>
<html lang={meta.language}>

  <head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content="Astro">
    <SEO {meta} />
    { Object.entries(meta.fonts).map( font => 
      <Font cssVariable={'--font-' + kebabCase(font[1])} preload />
    )}
    { meta.vercelSpeedInsights && <SpeedInsights/> }
  </head>
  
  <body style={toVars(meta.fonts)}>
    <slot />
  </body>
</html>
