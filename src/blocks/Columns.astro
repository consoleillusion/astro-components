---
const {columnWidth = "60ch", id = ""} = Astro.props
const arr = Array(10).fill(0).map((val,idx)=> 2 + Math.ceil(Math.random() * 20))
---

<section class="block columns" {id} >
  { arr.map( x =>
    <div class="item" style={"height:"+x+"rem"}><p>Text</p></div>
  )}
</section>

<style>
  section.block {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    .item {
      flex: 1 1 auto;
      max-width: 60ch;
    }
  }
    
